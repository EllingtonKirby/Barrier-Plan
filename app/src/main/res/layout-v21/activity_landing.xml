<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/cardview_default_elevation"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/barrier_plan"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="@dimen/spacing_100dp"
            android:layout_height="@dimen/spacing_56dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/toolbar_title"
            android:src="@drawable/mlr_logo_transparent"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/btn_metric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/spacing_16dp"
            android:paddingStart="@dimen/spacing_16dp"
            android:text="@string/metric"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18sp"
            />
        <TextView
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/spacing_16dp"
            android:paddingStart="@dimen/spacing_16dp"
            android:text="@string/contact"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18sp"
            android:visibility="gone"
            />
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
  </LinearLayout>

  <android.support.design.widget.BottomNavigationView
      android:id="@+id/bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      app:itemBackground="@color/colorPrimary"
      app:itemIconTint="@drawable/nav_selected_state"
      app:itemTextColor="@drawable/nav_selected_state"
      app:menu="@menu/bottom_navigation_main"
      />
</RelativeLayout>